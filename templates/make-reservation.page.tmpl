{{template "base" .}}


{{define "css"}}

{{end}}
<style>
    h3 {
        color: goldenrod;
        font-family: Ubuntu;
        font-weight: light;
    }

    .bt {
        background-color: goldenrod;
        color: black;
        font-family: Arial, Helvetica, sans-serif;
        font-weight: bold;
        border-radius: 0.55rem;
    }

